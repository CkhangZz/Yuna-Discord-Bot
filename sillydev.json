{
  "name": "yuna-music-bot",
  "description": "üéµ Professional Discord Music Bot - Yuna Music with beautiful pink-purple theme, Vietnamese & English support",
  "version": "1.0.0",
  "main": "index.js",
  "platform": "sillydev",
  
  "scripts": {
    "build": "npm run sillydev-setup",
    "start": "npm start",
    "test": "npm run diagnose"
  },
  
  "environment": {
    "NODE_ENV": "production",
    "PLATFORM": "sillydev",
    "CONTAINER_MODE": "true",
    "PORT": "${PORT}",
    "AUDIO_QUALITY": "medium",
    "BUFFER_SIZE": "2048",
    "OPUS_ENGINE": "opusscript"
  },
  
  "buildpacks": [
    "heroku/nodejs"
  ],
  
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    },
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  
  "healthcheck": {
    "path": "/",
    "interval": 30,
    "timeout": 10,
    "retries": 3,
    "grace_period": 30
  },
  
  "resources": {
    "memory": "512M",
    "cpu": "1x",
    "disk": "1G"
  },
  
  "restart_policy": {
    "condition": "unless-stopped",
    "delay": "5s",
    "max_attempts": 3,
    "window": "120s"
  },
  
  "required_env_vars": [
    "DISCORD_TOKEN",
    "CLIENT_ID", 
    "MONGODB_URL",
    "OWNER_ID"
  ],
  
  "optional_env_vars": [
    "LANGUAGE",
    "BOT_STATUS",
    "EMBED_COLOR",
    "TOPGG_API_KEY",
    "SUPPORT_SERVER",
    "MAX_VOLUME",
    "LEAVE_ON_FINISH",
    "LEAVE_ON_STOP",
    "LEAVE_ON_EMPTY",
    "EMPTY_COOLDOWN"
  ],
  
  "features": [
    "üéµ Professional Discord Music Bot",
    "üé® Beautiful pink-purple themed embeds", 
    "üåç Vietnamese & English language support",
    "üéöÔ∏è Advanced music controls (volume, queue, loop, shuffle)",
    "ü§ñ Smart autoplay system",
    "üì± Slash commands + button controls",
    "üßπ Auto-delete message management",
    "üöÄ Container-optimized performance",
    "üõ°Ô∏è Enhanced error handling",
    "üìä Built-in health monitoring",
    "‚ö° Fast startup with dependency caching",
    "üîÑ Auto-restart capabilities"
  ],
  
  "deployment": {
    "github": {
      "auto_deploy": true,
      "branch": "main"
    },
    "domains": {
      "custom": false,
      "subdomain": "auto"
    },
    "ssl": {
      "enabled": true,
      "force": false
    }
  },
  
  "monitoring": {
    "uptime": true,
    "performance": true,
    "logs": {
      "retention": "7d",
      "level": "info"
    }
  },
  
  "scaling": {
    "horizontal": {
      "min": 1,
      "max": 3,
      "target_cpu": 80
    },
    "vertical": {
      "memory": "auto",
      "cpu": "auto"
    }
  },
  
  "integrations": {
    "mongodb_atlas": {
      "recommended": true,
      "tier": "free"
    },
    "discord_developer_portal": {
      "required": true,
      "permissions": ["bot", "applications.commands"]
    },
    "topgg": {
      "optional": true,
      "for": "bot_listing"
    }
  }
}